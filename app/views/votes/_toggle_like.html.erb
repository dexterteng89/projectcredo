<%
  vote_path = polymorphic_path([votable, :vote])
  liked = user_signed_in? && current_user.voted_for?(votable)
  votable_class = votable.class.to_s.downcase
%>

<toggle-vote
  :liked="<%= liked %>"
  vote-path="<%= vote_path %>"
  votable-class="<%= votable_class %>"
  vote-count="<%= votable.get_likes.size.to_s %>"
></toggle-vote>
